<!-- Landing page for Vibecoding Community -->

<% content_for :page_meta do %>
  <title>Vibecoding Community - Where AI Meets Natural Language Development</title>
  <meta name="description" content="Join the vibecoding movement. Learn AI-assisted development, share projects built with tools like ANYON, and connect with fellow vibecoders building the future.">
  <link rel="canonical" href="<%= request.base_url %>">

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="<%= request.base_url %>">
  <meta property="og:title" content="Vibecoding Community - Where AI Meets Natural Language Development">
  <meta property="og:description" content="Join the vibecoding movement. Learn AI-assisted development, share projects built with tools like ANYON, and connect with fellow vibecoders building the future.">
  <meta property="og:image" content="<%= asset_url('vibecoding-hero.png') rescue '' %>">

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content="<%= request.base_url %>">
  <meta property="twitter:title" content="Vibecoding Community - Where AI Meets Natural Language Development">
  <meta property="twitter:description" content="Join the vibecoding movement. Learn AI-assisted development, share projects built with tools like ANYON, and connect with fellow vibecoders building the future.">
  <meta property="twitter:image" content="<%= asset_url('vibecoding-hero.png') rescue '' %>">
<% end %>

<div class="vibecoding-landing">
  <!-- Hero Section -->
  <section class="vibecoding-landing__hero crayons-card mb-6">
    <div class="vibecoding-landing__hero-content p-8 text-center">
      <h1 class="vibecoding-landing__title fs-3xl fw-bold mb-4">
        Welcome to Vibecoding Community
      </h1>
      <p class="vibecoding-landing__tagline fs-l color-base-70 mb-6">
        Where AI meets natural language development
      </p>
      <p class="vibecoding-landing__subtitle fs-base color-base-60 mb-6 mx-auto" style="max-width: 600px;">
        Discover the power of building production-ready apps using natural language and AI.
        Join a community of developers pushing the boundaries of what's possible with vibecoding.
      </p>
      <div class="vibecoding-landing__ctas flex justify-center gap-4 flex-wrap">
        <%= link_to "Join the Community", sign_up_path, class: "crayons-btn crayons-btn--primary crayons-btn--l" %>
        <%= link_to "Explore Posts", stories_path, class: "crayons-btn crayons-btn--secondary crayons-btn--l" %>
      </div>
    </div>
  </section>

  <!-- Value Proposition Section -->
  <section class="vibecoding-landing__value-prop mb-6">
    <h2 class="vibecoding-landing__section-title fs-2xl fw-bold mb-4 text-center">
      Why Vibecoding?
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <!-- AI-Powered Development -->
      <div class="crayons-card p-6">
        <div class="vibecoding-landing__value-icon mb-4 text-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="color-accent-brand">
            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
            <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
            <line x1="12" y1="22.08" x2="12" y2="12"></line>
          </svg>
        </div>
        <h3 class="fs-l fw-bold mb-2 text-center">AI-Powered Development</h3>
        <p class="color-base-70 text-center">
          Build production apps using natural language and AI assistants.
          Learn techniques, patterns, and best practices for AI-assisted coding.
        </p>
      </div>

      <!-- Community-Driven -->
      <div class="crayons-card p-6">
        <div class="vibecoding-landing__value-icon mb-4 text-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="color-accent-brand">
            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
            <circle cx="9" cy="7" r="4"></circle>
            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
          </svg>
        </div>
        <h3 class="fs-l fw-bold mb-2 text-center">Community-Driven</h3>
        <p class="color-base-70 text-center">
          Connect with fellow vibecoders, share experiences, get feedback, and grow together.
          A supportive space for developers exploring AI-assisted development.
        </p>
      </div>

      <!-- Learn & Grow -->
      <div class="crayons-card p-6">
        <div class="vibecoding-landing__value-icon mb-4 text-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="color-accent-brand">
            <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
            <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
          </svg>
        </div>
        <h3 class="fs-l fw-bold mb-2 text-center">Learn & Grow</h3>
        <p class="color-base-70 text-center">
          Discover new tools, techniques, and workflows. Showcase projects built with ANYON and other AI development tools.
        </p>
      </div>
    </div>
  </section>

  <!-- Community Stats Section -->
  <section class="vibecoding-landing__stats mb-6">
    <div class="crayons-card p-6">
      <h2 class="vibecoding-landing__section-title fs-2xl fw-bold mb-4 text-center">
        Join Our Growing Community
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="vibecoding-landing__stat text-center">
          <div class="vibecoding-landing__stat-value fs-3xl fw-bold color-accent-brand mb-2">
            <%= number_with_delimiter(@user_count) %>
          </div>
          <div class="vibecoding-landing__stat-label fs-base color-base-70">
            Community Members
          </div>
        </div>
        <div class="vibecoding-landing__stat text-center">
          <div class="vibecoding-landing__stat-value fs-3xl fw-bold color-accent-brand mb-2">
            <%= number_with_delimiter(@article_count) %>
          </div>
          <div class="vibecoding-landing__stat-label fs-base color-base-70">
            Posts Shared
          </div>
        </div>
        <div class="vibecoding-landing__stat text-center">
          <div class="vibecoding-landing__stat-value fs-3xl fw-bold color-accent-brand mb-2">
            <%= number_with_delimiter(@project_count) %>
          </div>
          <div class="vibecoding-landing__stat-label fs-base color-base-70">
            Projects Showcased
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Content Section -->
  <section class="vibecoding-landing__featured mb-6">
    <h2 class="vibecoding-landing__section-title fs-2xl fw-bold mb-4 text-center">
      Recent Posts from the Community
    </h2>

    <% if @featured_articles.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @featured_articles.each do |article| %>
          <article class="crayons-card p-4">
            <% if article.main_image.present? %>
              <div class="vibecoding-landing__article-image mb-3">
                <%= link_to article.path do %>
                  <img src="<%= article.main_image %>"
                       alt="<%= article.title %>"
                       class="radius-default"
                       loading="lazy"
                       style="width: 100%; height: 200px; object-fit: cover;">
                <% end %>
              </div>
            <% end %>

            <h3 class="fs-l fw-bold mb-2">
              <%= link_to article.title, article.path, class: "crayons-link" %>
            </h3>

            <div class="vibecoding-landing__article-meta mb-2 fs-s color-base-60">
              <% if article.user %>
                By <%= link_to article.user.name, article.user.path, class: "crayons-link" %>
              <% end %>
              • <%= article.readable_publish_date %>
            </div>

            <% if article.description.present? %>
              <p class="color-base-70 fs-base mb-3">
                <%= truncate(article.description, length: 120) %>
              </p>
            <% end %>

            <%= link_to "Read More →", article.path, class: "crayons-link fw-medium" %>
          </article>
        <% end %>
      </div>

      <div class="text-center mt-6">
        <%= link_to "View All Posts", stories_path, class: "crayons-btn crayons-btn--outlined" %>
      </div>
    <% else %>
      <div class="crayons-card p-8 text-center">
        <p class="fs-l color-base-60 mb-4">
          No posts yet, but great things are coming!
        </p>
        <p class="fs-base color-base-70 mb-4">
          Be the first to share your vibecoding journey with the community.
        </p>
        <%= link_to "Create Your First Post", new_article_path, class: "crayons-btn crayons-btn--primary" if user_signed_in? %>
        <%= link_to "Join to Start Posting", sign_up_path, class: "crayons-btn crayons-btn--primary" unless user_signed_in? %>
      </div>
    <% end %>
  </section>

  <!-- Final CTA Section -->
  <section class="vibecoding-landing__final-cta mb-6">
    <div class="crayons-card p-8 text-center">
      <h2 class="fs-2xl fw-bold mb-3">
        Ready to Start Vibecoding?
      </h2>
      <p class="fs-l color-base-70 mb-6">
        Join our community and discover the future of AI-assisted development
      </p>
      <div class="flex justify-center gap-4 flex-wrap">
        <%= link_to "Create Your Account", sign_up_path, class: "crayons-btn crayons-btn--primary crayons-btn--l" %>
        <%= link_to "Learn More", about_path, class: "crayons-btn crayons-btn--secondary crayons-btn--l" rescue link_to("Learn More", "#", class: "crayons-btn crayons-btn--secondary crayons-btn--l") %>
      </div>
      <p class="fs-s color-base-60 mt-4">
        Powered by tools like <a href="https://anyon.so" target="_blank" rel="noopener" class="crayons-link">ANYON</a>
      </p>
    </div>
  </section>
</div>
