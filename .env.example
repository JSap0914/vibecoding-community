################################################################################
# Vibecoding Community - Environment Configuration Template
#
# Copy this file to .env and customize with your values
# NEVER commit .env to version control
################################################################################

################################################################################
# CORE APPLICATION CONFIGURATION (REQUIRED)
################################################################################

# App Domain & Protocol
# Development: localhost:3000, Production: your-domain.com
APP_DOMAIN="localhost:3000"
APP_PROTOCOL="http://"

# Forem Owner Secret (Required for admin access)
# Generate with: rails secret
FOREM_OWNER_SECRET="change-this-to-a-secure-random-string"

# Community Identity
COMMUNITY_NAME="Vibecoding Community"
DEFAULT_EMAIL="admin@vibecoding.community"

################################################################################
# DATABASE CONFIGURATION (REQUIRED)
################################################################################

# PostgreSQL Database (Development)
# Docker: postgresql://localhost:5432/vibecoding_dev
# Native: adjust credentials as needed
DATABASE_NAME="vibecoding_dev"
DATABASE_URL="postgresql://localhost:5432/vibecoding_dev"

# PostgreSQL Database (Test)
DATABASE_NAME_TEST="vibecoding_test"
DATABASE_URL_TEST="postgresql://localhost:5432/vibecoding_test"

# Database Connection Pooling
DATABASE_POOL_SIZE=5
RAILS_MAX_THREADS=5

################################################################################
# REDIS CONFIGURATION (REQUIRED)
################################################################################

# Redis for caching and background jobs
# Docker: redis://localhost:6379
REDIS_URL="redis://localhost:6379"

# Redis for sessions (optional, falls back to REDIS_URL if not set)
# REDIS_SESSIONS_URL="redis://localhost:6379/1"

# Redis for Sidekiq (optional, falls back to REDIS_URL if not set)
# REDIS_SIDEKIQ_URL="redis://localhost:6379/2"

# Session Configuration
SESSION_KEY="_Vibecoding_Community_Session"
SESSION_EXPIRY_SECONDS=1209600  # Two weeks

################################################################################
# RAILS & NODE ENVIRONMENT
################################################################################

# Rails Environment (development | test | production)
RAILS_ENV="development"

# Node Environment (development | test | production)
NODE_ENV="development"

# Secret Key Base (Required for production)
# Generate with: rails secret
# SECRET_KEY_BASE="production-only-generate-with-rails-secret"

################################################################################
# WEB SERVER CONFIGURATION
################################################################################

# Puma Web Server
WEB_CONCURRENCY=2

# Rack Timeout (development only, increase for complex operations)
RACK_TIMEOUT_WAIT_TIMEOUT=100000
RACK_TIMEOUT_SERVICE_TIMEOUT=100000

# SSL Configuration (production only)
# FORCE_SSL_IN_RAILS="true"

################################################################################
# THIRD-PARTY SERVICES (OPTIONAL - Configure as needed)
################################################################################

# Cloudinary for Image Storage
# Sign up at: https://cloudinary.com
# CLOUDINARY_API_KEY=""
# CLOUDINARY_API_SECRET=""
# CLOUDINARY_CLOUD_NAME=""
# CLOUDINARY_SECURE=true

# AWS S3 for Image Storage (Alternative to Cloudinary)
# AWS_ID=""
# AWS_SECRET=""
# AWS_BUCKET_NAME=""
# AWS_UPLOAD_REGION=""

# Sentry for Error Tracking
# Sign up at: https://sentry.io
# SENTRY_DSN=""

# SendGrid for Email Delivery
# Sign up at: https://sendgrid.com
# SENDGRID_API_KEY=""

# SMTP Configuration (Alternative to SendGrid)
# SMTP_ADDRESS=""
# SMTP_PORT=587
# SMTP_DOMAIN=""
# SMTP_USER_NAME=""
# SMTP_PASSWORD=""
# SMTP_AUTHENTICATION="plain"

# Google Analytics 4 / Tag Manager
# GA_ANALYTICS_4_ID=""

# Algolia for Search Enhancement
# ALGOLIA_APPLICATION_ID=""
# ALGOLIA_API_KEY=""
# ALGOLIA_SEARCH_ONLY_API_KEY=""

# Google reCAPTCHA (Anti-spam)
# RECAPTCHA_SECRET=""
# RECAPTCHA_SITE=""

# GitHub OAuth (for GitHub sign-in)
# GITHUB_KEY=""
# GITHUB_SECRET=""

# Honeybadger for Error Tracking (Alternative to Sentry)
# HONEYBADGER_API_KEY=""
# HONEYBADGER_JS_API_KEY=""

# Slack Webhooks (for notifications)
# SLACK_WEBHOOK_URL=""
# SLACK_CHANNEL=""

################################################################################
# DEVELOPMENT & TESTING
################################################################################

# Disable SimpleCov coverage when running RSpec locally
COVERAGE="false"

# Heroku release metadata (production only)
# HEROKU_RELEASE_CREATED_AT=""
# HEROKU_SLUG_COMMIT=""

################################################################################
# VIBECODING CUSTOMIZATIONS
################################################################################

# Anyon Integration (Epic 2)
# ANYON_API_KEY=""
# ANYON_PROJECT_ID=""

# Custom Feature Flags
# ENABLE_VIBECODING_THEME="true"
# ENABLE_ANYON_INTEGRATION="false"

################################################################################
# NOTES
################################################################################
